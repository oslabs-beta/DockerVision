{
  "compilerOptions": {
    "noImplicitAny": true, //makes it so that ts cant set type to any when not manually typed
    "module": "CommonJS",
    "target": "ES6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    // "types": ["node"],
    // "typeRoots": ["./node_modules/@types"],
  },
  "include": ["src/**/*", "environment.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}